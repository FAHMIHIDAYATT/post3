<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil Formulir"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvResultFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Nama Lengkap: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvResultNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Nama Panggilan: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvResultAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Umur: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvResultEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Email: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvResultJenisKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Jenis Kelamin: "
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n\n(Catatan: Password tidak ditampilkan demi keamanan)"
        android:textStyle="italic" />

</LinearLayout>